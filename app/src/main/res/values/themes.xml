        <!-- Tu możesz zdefiniować ogólne atrybuty stylu -->
    </style>

    <!-- Styl dla przycisku -->
    <style name="Widget.SquareButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_dark</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
